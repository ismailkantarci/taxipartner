{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "strict": true,
    "noEmitOnError": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "./.cache/types/app",
    "types": ["vite/client", "vitest/globals", "@testing-library/jest-dom"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src",
    "tests",
    "vitest.config.ts",
    "playwright.config.ts",
    "src/vite-env.d.ts"
  ]
}
